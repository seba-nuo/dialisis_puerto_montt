{
  "kind": "collectionType",
  "collectionName": "noticias",
  "info": {
    "name": "noticia"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "titulo": {
      "type": "string"
    },
    "portada": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "cuerpo": {
      "type": "richtext"
    },
    "fecha": {
      "type": "date"
    },
    "url": {
      "type": "uid",
      "targetField": "titulo"
    }
  }
}
